<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
			 version="3.0">
	<persistence-unit name="default">

<!--		<jta-data-source>java:jboss/datasources/sep</jta-data-source>-->
		<jta-data-source>${jakarta.persistence.jta-data-source}</jta-data-source>

		<properties>
			<property name="hibernate.show_sql" value="${hibernate.show_sql}" />
			<!--suppress JpaDomInspection -->
			<property name="jakarta.persistence.schema-generation.database.action" value="${jakarta.persistence.schema-generation.database.action}" />
			<property name="hibernate.hbm2ddl.auto" value="${hibernate.hbm2ddl.auto}" />
		</properties>

	</persistence-unit>
</persistence>